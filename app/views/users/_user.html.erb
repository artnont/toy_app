<div id="<%= dom_id user %>">
  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Micropost:</strong>
    <% if user.microposts.present? %>
      <%= user.microposts.first.content %>
    <% else %>
      This user doesn't have any microposts.
    <% end %>
  </p>



</div>
